extends layout 

block content 
  .form-margin
    .form-container
      h1=title

      form.form(action="" method='POST')
        .form-title
          label(for="name") Name: 
          input#name(type='text' placeholder='Name' name='name' required='true' value=(platform === undefined ? '' : platform.name)) 
          label(for="description") Description: 
          input#description(type='textbox' placeholder='Description...' name='description' required='true' value=(platform === undefined ? '' : platform.description))
        button.button-form-submit(type='submit') Submit
      if errors
        ul
          for error in errors
            li!= error.msg