extends layout 

block content 
  h1=title

  form(action="" method='POST')
    .form-group
      label(for="name") Name: 
      input#name.form-control(type='text' placeholder='Name' name='name' required='true' value=(platform === undefined ? '' : platform.name)) 
      label(for="description") Description: 
      input#description.form-control(type='textbox' placeholder='Description...' name='description' required='true' value=(platform === undefined ? '' : platform.description))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg