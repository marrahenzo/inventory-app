extends layout 

block content 
  h1 #{title}: #{agerating.name}

  if games.length
    p #[strong Delete the following games before attempting to delete this age rating]
    div
      h4 Games 
      dl 
      for game in games 
        dt 
          a(href=game.url) #{game.title}
        dd #{game.summary}
  else
    p Do you really want to delete this Age rating?
    form(action="" method='POST')
      .form-group
        input#ratingid.form-control(type='hidden' name='ratingid' required='true' value=agerating.id)
      button.btn.btn-primary(type='submit') Delete