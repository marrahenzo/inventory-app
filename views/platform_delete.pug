extends layout 

block content 
  h1 #{title}: #{platform.name}

  if games.length
    p #[strong Delete the following games before attempting to delete this platform]
    div
      h4 Games 
      dl 
      for game in games 
        dt 
          a(href=game.url) #{game.title}
        dd #{game.summary}
  else
    p Do you really want to delete this Platform?
    form(action="" method='POST')
      .form-group
        input#platformid.form-control(type='hidden' name='platformid' required='true' value=platform.id)
      button.btn.btn-primary(type='submit') Delete