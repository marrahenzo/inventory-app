extends layout 

block content 
  h1 #{title}: #{genre.name}

  if games.length
    p #[strong Delete the following games before attempting to delete this genre]
    div
      h4 Games 
      dl 
      for game in games 
        dt 
          a(href=game.url) #{game.title}
        dd #{game.summary}
  else
    p Do you really want to delete this Genre?
    form(action="" method='POST')
      .form-group
        input#genreid.form-control(type='hidden' name='genreid' required='true' value=genre.id)
      button.btn.btn-primary(type='submit') Delete