extends layout

block content
  #gamelist-title-container
    h1 Game Copies
    a(href="/game/create") #[button Add a Copy]
  #gamelist-container
    for gameCopy in data
      .gamelist-game 
        a(href=gameCopy.url)
          p= gameCopy.game.title
          for platform in gameCopy.game.platform
            p= platform.name
          p= gameCopy.price 
          p= gameCopy.format
          p= gameCopy.condition