extends layout 

block content 
  .form-margin
    .form-container
      h1=title

      form.form(action="" method='POST')
        .form-title
          label(for="name") Name: 
          input#name(type='text' placeholder='Name' name='name' required='true' value=(genre === undefined ? '' : genre.name)) 
          label(for="description") Description: 
          textarea#description(placeholder='Description...' name='description' required='true' cols="30", rows="10") #{genre === undefined ? '' : genre.description}
        button.button-form-submit(type='submit') Submit
      if errors
        ul
          for error in errors
            li!= error.msg